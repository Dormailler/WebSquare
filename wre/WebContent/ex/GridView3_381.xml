        sortIndex: [0,1],
        closeGroup: true,
        groupbyHeader: [{
            InputType:"expression",
            expression:'toggle() + depthStr() + "  [" + count() + "Cases ] "',
            align:"left",
            colSpan:"4"
        }],
        groupbyFooter:{
            depth_0:[{
                colSpan:"3",
                value:"Grand Total",
                align:"right"
            },{
                inputType : "expression",
                expression: 'SUM("col4")'
            }],
            depth_1:[{
                colSpan:"3",
                value:"Sub Total",
                align:"right"
            },{
                inputType : "expression",
                expression: 'SUM("col4")'
            }]
        }
    };
    gv1.groupby(opt);
};

scwin.trigger2_onclick = function(e) {
